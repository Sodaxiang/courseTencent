<li class="recom-course-item">
   <div class="course-cover">
      <a class="course-lk" href="https://ke.qq.com/course/{{courseId}}" target="_blank">
          <img src="{{courseImg}}" alt="{{courseName}}" />
      </a>
   </div>
   <div class="course-info">
       <a class="course-title" href="https://ke.qq.com/course/{{courseId}}" target="_blank">
           <h3>{{courseName}}</h3>
       </a>
       <p class="description">{{courseDescription}}</p>
       <div class="teacher-info">
               <img src="{{teacherImg}}" alt="{{teacherName}}"/>
               <span>{{teacherName}}</span>
       </div>
       <div class="course-price">￥{{coursePrice}}.00</div>
       <div>
         <a href="https://ke.qq.com/course/{{courseId}}" target="_blank">
               <span class="join-btn">立即报名</span>
         </a>
       </div>      
   </div>
</li>