<li class="course-card-item">
    <a class="card-lk" href="https://ke.qq.com/course/{{courseId}}" target="_blank">
        <img src="{{courseImg}}"/>
    </a>
    <div class="item-status">
        <span class="item-status-step">随到随学</span>
    </div>
    <h4 class="item-tt">
        <a class="tt-lk" href="https://ke.qq.com/course/{{courseId}}" target="_blank" class="tt-link">
            {{courseName}}
        </a>
    </h4>
    <div class="item-line">
        <span class="line-cell item-price {{coursePriceClass}}">{{coursePrice}}</span>
    </div>
</li>